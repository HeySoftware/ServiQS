{% extends "::navbar.html.twig" %}

{% block body %}
	<div class="panel panel-default col-md-offset-3 col-md-6">
		<div class="panel-heading"><h2 style="text-align:center">{{ "¿Cómo prefieres tu(s) " ~ platillo ~ "?" }}</h2></div>

		<div class="panel-body">
			{{ form_start(form) }}
				{% set contador = 1 %}
				{% for descripcion in form.descripciones %}
					<div class="row">
						<h4 style="text-align:center">{{ "Platillo " ~ contador }}</h4>
					</div>
					<div class="row">
						{{ form_row(descripcion.descripcion) }}<br><br>
					</div>
					{% set contador = contador + 1 %}
				{% endfor %}
			{{ form_end(form) }}
		<div>
	</div>
{% endblock %}